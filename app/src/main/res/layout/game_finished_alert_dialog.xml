<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="321dp"
        android:layout_height="321dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/gameFinishedStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_background_color"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/gameTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:background="@drawable/settings_background_color"
            android:textAlignment="center"
            android:textSize="30dp" />
        <Button
            android:id="@+id/continueGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unclickable_button"
            android:text="undo last move?"
            android:textColor="#a0ffffff"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_weight="1" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/previousLevelButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_background_color"
                android:text="previous level"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/refreshGameButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_background_color"
                android:text="refresh game"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nextLevelButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_background_color"
                android:text="next level"
                android:textSize="11dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <Button
                android:id="@+id/backToHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_background_color"
                android:text="home"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>